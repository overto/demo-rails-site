<p id="notice"><%= notice %></p>

<h1>Blogs</h1>

<div class="row">
  <div>
    <%= paginate @blogs %>
  </div>
  <div class="table-responsive col-xs-12">
    <table class="table">
      <thead>
      <tr>
        <th>Title</th>
        <th>Published date</th>
        <th>Author</th>
        <th>Content</th>
        <th colspan="3"></th>
      </tr>
      </thead>

      <tbody>
      <% @blogs.each do |blog| %>
          <tr>
            <td><%= blog.title %></td>
            <td><%= blog.published_date %></td>
            <td><%= blog.author %></td>
            <td><%= (blog.content).html_safe %></td>
            <td><%= link_to 'Show', blog %></td>
            <% if current_user.try(:admin?) %>
                <td><%= link_to 'Edit', edit_blog_path(blog) %></td>
                <td><%= link_to 'Destroy', blog, method: :delete, data: {confirm: 'Are you sure?'} %></td>
            <% end %>
          </tr>
      <% end %>
      </tbody>
    </table>
  </div>
  <div>
    <%= paginate @blogs %>
  </div>
  <br>

  <%= button_to 'New Blog', new_blog_path, method: :get, class: 'btn btn-primary btn-sm' %>
</div>