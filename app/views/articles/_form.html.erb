<%= tinymce %>

<div class="row">
  <div class="col-xs-12 col-md-8 section-container-spacer">

    <%= form_with(model: article, local: true) do |form| %>
        <% if article.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(article.errors.count, "error") %> prohibited this article from being saved:</h2>

              <ul>
                <% article.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                <% end %>
              </ul>
            </div>
        <% end %>

        <div class="field">
          <%= form.label :title %>
          <%= form.text_field :title, id: :article_title %>
        </div>

        <div class="field">
          <%= form.label :author %>
          <%= form.text_field :author, id: :article_author %>
        </div>

        <div class="field">
          <%= form.label :published_date %>
          <%= form.date_select :published_date, id: :article_published_date, include_blank: true %>
        </div>

        <div class="field">
          <%= form.label :is_published %>
          <%= form.check_box :is_published, id: :article_is_published %>
        </div>

        <div class="field">
          <%= form.label :content %>
          <%= form.text_area :content, id: :article_content, class: "tinymce" %>
        </div>

        <div class="field">
          <%= form.label :author_thumbnail_avatar_url %>
          <%= form.text_field :author_thumbnail_avatar_url, id: :article_author_thumbnail_avatar_url %>
        </div>

        <div class="actions">
          <%= form.submit class: "btn btn-primary btn-sm" %>
        </div>
    <% end %>
  </div>
</div>